<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Fab_Circle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/Shape_Fab_Circle</item>
    </style>

    <style name="Shape_Fab_Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>
<!-- 조리 난이도 스타일 설정 -->
<style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
    <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
</style>

<!-- 캘린더의 날짜(Day)의 스타일 설정 -->
<style name="CalendarViewCustom" parent="Theme.AppCompat">
    <item name="android:textColor">@drawable/selector_calendar_textcolor</item>
    <item name="font">@font/pretendard_bold</item>

</style>

<!-- 캘린더의 날짜(Day)의 스타일 설정 -->
<style name="CalendarViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:textColor">@drawable/selector_calendar_textcolor</item>
    <item name="font">@font/pretendard_medium</item>
</style>

<!-- 캘린더의 요일에 적용되는 스타일 -->
<style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
    <item name="android:textColor">@color/Gray2</item>
    <item name="font">@font/pretendard_semibold</item>
</style>

<!-- 연, 월을 표시하는 헤더에 적용되는 스타일 -->
<style name="CalendarWidgetHeader">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">#FF7300</item>
    <item name="font">@font/pretendard_bold</item>
    <item name="android:textStyle">bold</item>
</style>

<!-- Dialog 관련 스타일 -->
<style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
</style>

<style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    <item name="android:windowExitAnimation">@android:anim/fade_out</item>
</style>

    <style name="LoadingDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- 어둡기 정도 (0.0~1.0) -->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

</resources>

