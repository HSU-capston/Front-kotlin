                android:fontFamily="@font/pretendard_semibold"
                android:text="AI 맞춤 서비스를 이용해봐요"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />


            <EditText
