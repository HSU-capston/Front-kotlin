<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    android:src="@drawable/sub_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_32"
            android:fontFamily="@font/pretendard_bold"
            android:text="게임을 종료하시겠습니까?"
            android:textStyle="bold"
            android:textColor="@color/sub_6"
            android:textAlignment="center"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Gray4"
            android:fontFamily="@font/pretendard_medium"
            android:inputType="number"
            android:hint="점수 입력"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44sp"
            android:layout_marginRight="@dimen/spacing_32"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:backgroundTint="@color/Gray7"
                android:layout_height="wrap_content"
                android:text="취소"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_marginLeft="28sp"
                android:layout_width="100dp"
                android:backgroundTint="@color/sub_6"
                android:layout_height="wrap_content"

                android:text="확인"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>